      },
      //重置
      reset() {
        this.formData = {};
        this.widgetInfo.pageNo = 1;
        this.findMonitorDeviceStateDownList();
      },
      //查询
      lookFor() {
        this.widgetInfo.pageNo = 1;
        this.findMonitorDeviceStateDownList();
      },
      //关闭弹框
      handleClose(){
        const that = this;
        that.dialogVisible = false;
        that.$nextTick(() => {
          that.plan={}
          that.$refs["plan"].resetFields();
