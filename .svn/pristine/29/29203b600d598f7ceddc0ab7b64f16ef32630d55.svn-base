      <el-breadcrumb separator-class="el-icon-arrow-right">
        <el-breadcrumb-item>运营中心</el-breadcrumb-item>
        <el-breadcrumb-item>用户信息管理</el-breadcrumb-item>
      </el-breadcrumb>
    </div>
    <div class="main-wrap">
      <el-tabs v-model="activeName" @tab-click="handleClick">
        <el-tab-pane label="实际用户" name="first">
          <actual-users></actual-users>
        </el-tab-pane>
        <el-tab-pane label="有效用户" name="second">
          <affective-user></affective-user>
        </el-tab-pane>
      </el-tabs>
    </div>
  </div>
</template>
<script>

  import ActualUsers from "~/pages/userInfoManage/actualUsers";
  import AffectiveUser from "~/pages/userInfoManage/effectiveUser";
  export default {
    components: {
      ActualUsers,
      AffectiveUser
    },

    data() {
      return{
        activeName:'first'
      };
    },
    created(){
        if (process.client) {
            const that = this;
            that.activeName = 'first'
        }
    },
    mounted() {
      const that = this;
      if(localStorage.getItem('indexName')){
        that.activeName =localStorage.getItem('indexName')
      }else{
        that.activeName = 'first'
      }
    },
    methods: {
      handleClick(tab, event) {
        const that = this;
        let indexName = event.target.getAttribute('id').substring(4) || 'first';
        localStorage.setItem('indexName',indexName);
      }
    }
  };
</script>
