      </el-breadcrumb>
    </div>
    <div class="main-wrap">
<!--      免费模式    Third, fourth and fifth -->
      <el-tabs v-model="activeNameType" @tab-click="handleClick">
        <el-tab-pane label="免费模式" name="first">
          <free-mode></free-mode>
        </el-tab-pane>
        <el-tab-pane label="基础安全模式" name="second">
          <basic-security></basic-security>
        </el-tab-pane>
        <el-tab-pane label="初级安全模式" name="third">
          <primary-security></primary-security>
        </el-tab-pane>
        <el-tab-pane label="高级安全模式" name="fourth">
          <advanced-security></advanced-security>
        </el-tab-pane>
        <el-tab-pane label="全托管模式" name="fifth">
          <fully-managed></fully-managed>
        </el-tab-pane>
      </el-tabs>
    </div>
  </div>
