<script>
  import FreeMode from "~/pages/userTypeConfig/tabs/freeMode";
  import FullyManaged from "~/pages/userTypeConfig/tabs/fullyManaged";
  import BasicSecurity from "~/pages/userTypeConfig/tabs/basicSecurity";
  import PrimarySecurity from "~/pages/userTypeConfig/tabs/primarySecurity";
  import AdvancedSecurity from "~/pages/userTypeConfig/tabs/advancedSecurity";
  export default {
    components: {
      FreeMode,
      FullyManaged,
      BasicSecurity,
      PrimarySecurity,
      AdvancedSecurity
    },
    data() {
      return{
        activeNameType:'first'
      };
    },
    created(){
      const that = this;
      that.activeNameType = 'first'
    },
    mounted() {
      const that = this;
      if(localStorage.getItem('activeNameType')){
        that.activeNameType =localStorage.getItem('activeNameType')
      }else{
        that.activeNameType = 'first'
      }
    },
    methods: {
      /**
       * 切换tabs的事件
       * @param tab
       * @param event
       */
      handleClick(tab, event) {
        const that = this;
        let indexName = event.target.getAttribute('id').substring(4) || 'first';
        localStorage.setItem('activeNameType',indexName);
      }
    }
  };
</script>
