html,
body {
  font-family: 'microsoft yahei';
  margin: 0;
  width: 100%;
  min-width: 1280px;
  height: 100%;
  //overflow-y: hidden;
  background: #f5f8fc
}



::-webkit-scrollbar {
  width: 6px;
}

// ::-webkit-scrollbar-track {
//   -webkit-box-shadow: inset 0 0 6px rgba(28, 119, 255, .5);
//   -webkit-border-radius: 3px;
//   border-radius: 3px;
// }

::-webkit-scrollbar-thumb {
  -webkit-border-radius: 3px;
  border-radius: 3px;
  background: rgba(28, 119, 255, .6);
  -webkit-box-shadow: inset 0 0 3px rgba(28, 119, 255, .6);
}

::-webkit-scrollbar-thumb:window-inactive {
  background: rgba(28, 119, 255, .7)
}





.hardware-container {
  height: calc(100vh);
  font-size: 16px;
}

//面包屑
.Crumbs {
  height: 64px;
  line-height: 64px;

  .el-breadcrumb {
    line-height: 64px;
    font-size: 16px;
    color: rgba(165, 173, 184, 1);
  }
}

//主体内容外框
.main-wrap {
  background: #fff;
  border: 1px solid rgba(225, 229, 235, 1);
  height: calc(100vh - 90px - 64px - 20px); //导航90px 面包屑64px 距离底部20px
  overflow: hidden;

  .location {
    padding-left: 25px;
    height: 65px;
    line-height: 65px;
    font-size: 18px;
    font-weight: bold;
    color: rgba(37, 40, 46, 1);
    border-bottom: 1px solid rgba(225, 229, 235, 1);
  }
}



//表单
.hardware-form {
  padding-top: 20px;

  .el-form-item {
    margin-bottom: 20px;

    .el-form-item__label {
      font-size: 16px;
      font-weight: 400;
      color: rgba(82, 92, 102, 1);
      line-height: 36px;
    }

    .el-date-editor--daterange.el-input__inner,
    .el-date-editor {
      width: 100%;
    }

    .el-form-item__content {
      flex-grow: 1;
      line-height: 36px;
    }
  }

  .el-input__inner {
    height: 36px;
    border: 1px solid rgba(225, 229, 235, 1);
    border-radius: 4px;
  }
}



.el-pagination {
  text-align: right;
  margin-top: 25px;
}

//表格
.el-table__header-wrapper {
  .has-gutter {
    th {
      background: #e3e5e8;
    }
  }
}

//dialog
.el-dialog__wrapper {
  .el-dialog {
    border-radius: 4px;
  }

  .el-dialog__header {
    border-bottom: 1px solid rgba(225, 229, 235, 1)
  }

  .el-dialog__body {
    height: auto;
    max-height: calc(100vh - 60px - 200px);
    overflow-y: auto;
    padding: 10px 20px;
  }
}

.del-dialog-wrap {
  .el-dialog__header {
    border-bottom: none;
  }

  .el-dialog__headerbtn {
    display: none;
  }

  .del-dialog-main {
    display: flex;
    justify-content: center; //水平居中
    align-items: center; //垂直居中

    .icon-wrap {
      font-size: 46px;
      color: rgba(28, 119, 255, 1);
      margin-right: 10px;
    }

    .p-wrap {
      .title-p {
        font-size: 18px;
        font-weight: 400;
        color: rgba(37, 40, 46, 1);
      }

      .tips-p {
        font-size: 15px;
        font-weight: 400;
        color: rgba(82, 92, 102, 1);
      }
    }
  }

  .el-dialog__footer {
    display: flex;
    justify-content: center; //水平居中
  }
}

//dialog里面的form 的表单样式
.dialog-form-style {
  padding: 0;

  .el-form-item {
    padding: 0 9px;
  }

  .el-form-item__label {
    padding: 0;
  }
}

//分页
.el-pagination {
  padding-right: 25px;
}

@media screen and (max-width: 1680px) {

  //主体内容外框
  .main-wrap {
    height: calc(100vh - 90px - 60px); //导航90px 面包屑64px 距离底部20px
  }
}
