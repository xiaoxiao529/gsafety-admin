.hardware-container {
    height: calc(100vh);


}

//面包屑
.Crumbs {
    height: 60px;
    line-height: 60px;
}

//主体内容外框
.main-wrap {

    background: #fff;
    border: 1px solid rgba(225, 229, 235, 1);
    padding: 0 20px 20px 20px;
    height: calc(100vh);
    overflow: hidden;
    overflow-y: auto;

    .location {
        padding-left: 25px;
        margin: 0 -25px;
        height: 65px;
        line-height: 65px;
        font-size: 18px;
        font-weight: bold;
        color: rgba(37, 40, 46, 1);
        border-bottom: 1px solid rgba(225, 229, 235, 1);
    }
}

//表单
.el-form {
    padding: 20px 0;

    .el-form-item {
        .el-form-item__label {
            font-size: 16px;
            font-weight: 400;
            color: rgba(82, 92, 102, 1);
        }
    }

    .el-input__inner {
        height: 36px;
        border: 1px solid rgba(225, 229, 235, 1);
        border-radius: 4px;
    }
}

.el-select {
    width: 100%;
}

.el-pagination {
    text-align: right;
    margin-top: 25px;
}

//表格
.el-table__header-wrapper {
    .has-gutter {
        th {
            background: #e3e5e8;
        }
    }
}

//dialog
.el-dialog__wrapper{
  .el-dialog{
    border-radius: 4px;
  }
  .el-dialog__header{
    border-bottom: 1px solid rgba(225,229,235,1)
  }
  .el-dialog__body{
    height: auto;
    max-height: calc(100vh - 60px - 200px);
    overflow-y: auto;
    padding: 10px 20px;
  }
}
.del-dialog-wrap{
  .el-dialog__header{
    border-bottom: none;
  }
  .el-dialog__headerbtn{
    display: none;
  }
  .del-dialog-main{
    display: flex;
    justify-content:center;//水平居中
    align-items: center;//垂直居中
    .icon-wrap{
      font-size: 46px;
      color: rgba(28,119,255,1);
      margin-right:10px;
    }
    .p-wrap{
      .title-p{
        font-size:18px;
        font-weight:400;
        color:rgba(37,40,46,1);
      }
      .tips-p{
        font-size:15px;
        font-weight:400;
        color:rgba(82,92,102,1);
      }
    }
  }
  .el-dialog__footer{
    display: flex;
    justify-content:center;//水平居中
  }
}
//dialog里面的form 的表单样式
.dialog-form-style{
  padding: 0;
  .el-form-item{
    padding:0 9px;
  }
  .el-form-item__label{
    padding: 0;
  }
}
